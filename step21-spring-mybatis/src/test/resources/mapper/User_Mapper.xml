<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.suwg.springframework.mybatis.test.dao.IUserDao">

    <select id="queryUserInfoById" parameterType="java.lang.Long"
            resultType="cn.suwg.springframework.mybatis.test.po.User">
        SELECT id, user_id, user_name, user_head, user_password, create_time
        FROM my_user
        where id = #{id}
    </select>

    <select id="queryUserList" parameterType="cn.suwg.springframework.mybatis.test.po.User"
            resultType="cn.suwg.springframework.mybatis.test.po.User">
        SELECT id, user_id, user_name, user_head, user_password, create_time, update_time
        FROM my_user
        where user_name = #{userName}
    </select>

</mapper>